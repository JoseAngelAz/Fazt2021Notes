<section class="border border-warning">
        {{#each blogs}}
        <div class="card bg-primary col-6">
            <div class="card-header">
                <h3>{{title_blog}}</h3>
            </div>
            <div class="card-body">
                <img class="img-fluid img-blog" src="/uploads/167102071_3390767434357482_5876993520648323065_n.jpg"
                    alt="imagen">
                <p class="text-white">{{content_blog}}</p>
            </div>
            <div class="card-footer">
                <form action="/blog/delete/{{_id}}" method="POST">
                    <button class="btn btn-danger btn-block btn-sm">DELETE</button>
                </form>
            </div>            
        </div>
        <div class="recomendacion col-3">
                {{>elemtoaside}}
            </div>
        {{/each}}
</section>
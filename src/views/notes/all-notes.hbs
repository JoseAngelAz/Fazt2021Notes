<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card bg-warning">
                <div class="card-body">
                    <h4 class="text-danger card-title d-flex justify-content-between align-items-center">{{this.title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-edit"></i></a></h4>
                    <p class="text-primary">{{this.description}}</p>
                </div>
                <div class="card-footer">
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <!--input oculto con valor delete-->
                    <input type="hidden" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">DELETE</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>